<h1>Card</h1>
<div id="card">
{{#if courses.length }}
<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Amount</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
  {{#each courses}}
    <tr>
      <td>{{title}}</td>
      <td>{{count}}</td>
      <td><button class="btn btn-small js-remove" data-id="{{id}}">Delete</button></td>
    </tr>
  {{/each}}  
  </tbody>
</table>

<p><strong>Total Price: <span class="price">{{price}}</span></strong></p>

{{else}}
<h2>Card is empty!</h2>
{{/if}}
</div>
